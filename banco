class Banco:
    def __init__(self, nombre, tasa):
        self.nombre = nombre
        self.tasa = tasa
    def calcular_interes(self, cantidad, años):
        tasa = self.tasa / 100
        monto = cantidad
        contador = 0
        while contador < años:
            monto = monto + monto * tasa
            contador = contador + 1
        return monto - cantidad
    def tiempo_para_duplicar(self):
        if self.tasa <= 0:
            return "Nunca"
        total = 0
        pasos = 0
        while total < 72:
            total = total + self.tasa
            pasos = pasos + 1
        return pasos
